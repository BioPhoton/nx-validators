{
    "extends": ["../../.eslintrc.json"],
    "ignorePatterns": ["!**/*"],
    "plugins": ["@nx"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
            "rules": {
                "no-console": "off"
            }
        },
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {},
            "parserOptions": {
                "project": ["packages/migration-kit/tsconfig.*?.json"]
            }
        },
        {
            "files": ["*.js", "*.jsx"],
            "rules": {}
        },
        {
            "files": ["*.json"],
            "parser": "jsonc-eslint-parser",
            "rules": {
                "@nx/dependency-checks": [
                    "error",
                    {
                        "ignoredDependencies": ["@nx-validators/dev-kit"]
                    }
                ],
                "@nx/nx-plugin-checks": "error"
            }
        }
    ]
}
